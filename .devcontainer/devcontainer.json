{
  "name": "Debian 12 with systemd",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "runArgs": [
    "--privileged",
    "--volume", "/var/run/dbus:/var/run/dbus:rw",
    "--volume", "/sys/fs/cgroup:/sys/fs/cgroup:rw",
    "--volume", "/run/systemd:/run/systemd:rw",
    "--volume", "/etc/systemd:/etc/systemd:rw"
  ],
  "postCreateCommand": "bash .devcontainer/init-systemd.sh",
  "remoteUser": "root"
}
