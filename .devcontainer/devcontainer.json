{
  "name": "Debian 12 with systemd (PID 1)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--privileged",
    "--volume", "/sys/fs/cgroup:/sys/fs/cgroup:ro",
    "--volume", "/var/log/journal:/var/log/journal:rw",
    "--volume", "/var/run/dbus:/var/run/dbus:rw",
    "--tmpfs", "/run:rw,size=1g,mode=0755",
    "--tmpfs", "/run/lock:rw,size=1g,mode=0755"
  ],
  "postStartCommand": "bash .devcontainer/start.sh",
  "remoteUser": "root"
}
