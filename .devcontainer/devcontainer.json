{
  "name": "Debian 12 with systemd",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "runArgs": [
    "--privileged",
    "--volume", "/sys/fs/cgroup:/sys/fs/cgroup:rw",
    "--volume", "/run/systemd:/run/systemd:rw",
    "--volume", "/var/run/dbus:/var/run/dbus:rw",
    "--tmpfs", "/run",
    "--tmpfs", "/run/lock"
  ],
  "postCreateCommand": "bash .devcontainer/init-systemd.sh",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.makefile-tools"
      ]
    }
  }
}
