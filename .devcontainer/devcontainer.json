{
  "name": "Debian 12 with systemd (PID 1)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "runArgs": [
    "--privileged",
    "--volume", "/sys/fs/cgroup:/sys/fs/cgroup:ro",
    "--tmpfs", "/run",
    "--tmpfs", "/run/lock",
    "--volume", "/var/run/dbus:/var/run/dbus:rw",
    "--cap-add", "SYS_ADMIN"
  ],
  "postCreateCommand": "sudo bash .devcontainer/init-systemd.sh",
  "remoteUser": "developer"
}
