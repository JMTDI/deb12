{
  "name": "Debian 12 with systemd (PID 1)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--privileged",
    "--volume", "/sys/fs/cgroup:/sys/fs/cgroup:rw",
    "--volume", "/var/log/journal:/var/log/journal:rw",
    "--volume", "/run/systemd:/run/systemd:rw",
    "--tmpfs", "/tmp",
    "--tmpfs", "/run"
  ],
  "overrideCommand": false,
  "remoteUser": "root",
  "postStartCommand": "sleep 3 && bash .devcontainer/start.sh"
}
